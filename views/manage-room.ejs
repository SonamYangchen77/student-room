<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Rooms</title>
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/manage-room.css" />
</head>

<body>
  <%- include('partials/header') %>

  <main class="container">
    <div class="content-wrapper">
      <h1>Manage Rooms</h1>

      <div id="success-message" style="color: green; font-weight: bold; margin-bottom: 1rem;"></div>

      <form id="room-form">
        <input type="hidden" id="room-id" name="room_id" />

        <label for="hostel-select">
          Hostel:
          <select id="hostel-select" name="hostel_id" required>
            <option value="">Select Hostel</option>
            <% hostels.forEach(hostel => { %>
              <option value="<%= hostel.id %>">
                <%= hostel.name %> (<%= hostel.gender %>)
              </option>
            <% }) %>
          </select>
        </label>

        <label for="room-name">
          Room Number:
          <input type="text" id="room-name" name="room_name" required placeholder="Room Name/Number" />
        </label>

        <label for="is-available">
          Available:
          <input type="checkbox" id="is-available" name="is_available" checked />
        </label>

        <button type="submit" id="submit-btn">Add Room</button>
        <button type="button" id="cancel-btn" style="display: none;">Cancel</button>
      </form>

      <div id="rooms-container">

      </div>
    </div>
  </main>

  <script src="/js/manage-room.js"></script>
</body>

</html>
